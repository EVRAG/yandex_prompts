{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src"]
}
